<%= form_for @music, :html => { :class => "form-horizontal music" } do |f| %>

    <% if @music.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @music.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@music[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :file, :class => 'form-control' %>
    </div>
    <%= error_span(@music[:file]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            musics_path, :class => 'btn btn-default' %>

<% end %>
